
@{
    Layout = null;
}

@Styles.Render("~/CSS/ProfileCSS")

<div id="profile">

    <div id="leftColumn">
        @{ string path = "";

            //if (ViewBag.User != null && ViewBag.User.AvatarPath != null) { path = ViewBag.User.AvatarPath; }
            //else { path = "../UploadsPicture/noimage.jpg"; }

            <img id="avatar" src="{{(User!=null&&User.AvatarPath!=null)?User.AvatarPath:'../UploadsPicture/noimage.jpg'}}" alt="Mountain View" style="width:150px; ">
        }
    </div>

    <div id="rightColumn">
        <div style="margin-top:-5px;">
            <span style="font-size:18px;">{{User.Name}} &nbsp; {{{User.Surname}}</span>
            <span style="font-size:12px; float: right; color:#959595">Online</span>
        </div>

        <div style="margin-top: -5px">
            <span style="font-size:12px; color:#959595; cursor: pointer;" ng-click="getProfileCreateView();">Редактировать</span>
            <span style="font-size:12px; float: right; color:#959595">@*Статус*@</span>

        </div>

        <div style="margin-top: 25px">
            <div style="display: inline-block; width: 100px;  vertical-align:top;">
                <span style="font-size:12px;">Страна:</span> <br>
                <span style="font-size:12px;">Город:</span> <br>
                <span style="font-size:12px">Возраст:</span> <br>
                <span style="font-size:12px">Пол:</span> <br>
                <span style="font-size:12px">Телефон:</span> <br>
                <span style="font-size:12px">Язык:</span> <br> <br>
                <span style="font-size:12px">О себе:</span>
            </div>
            <div style="display: inline-block; width: 220px; vertical-align:top;">
                <span style="font-size:12px">{{User.Country}}</span> <br>
                <span style="font-size:12px">{{User.Sity}}</span> <br>
                <span style="font-size:12px">{{User.Age}}</span> <br>
                <span style="font-size:12px">{{User.IsFemale}}</span> <br>
                <span style="font-size:12px">{{User.PhoneNumber}}</span> <br>
                <span style="font-size:12px">{{User.Language}}</span> <br> <br>
                <span style="font-size:12px">{{UUser.Description}}</span> <br>

            </div>

        </div>


    </div>

    <div>

        тут будет стена

    </div>

</div>
